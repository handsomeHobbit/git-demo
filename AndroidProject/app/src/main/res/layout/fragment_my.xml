<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyFragment"
    android:background="@drawable/green"
    android:orientation="horizontal"
    android:usesCleartextTraffic="true">
    <LinearLayout
        android:id="@+id/my_left"
        android:layout_width="450dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="80dp">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:src="@tools:sample/avatars"
            android:layout_marginTop="250dp"/>

        <TextView
            android:id="@+id/txt_id"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:textSize="30sp"
            android:text="18819798636" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/my_right"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:paddingLeft="100dp">

        <TextView
            android:id="@+id/function1"
            android:layout_width="480dp"
            android:layout_height="100dp"
            android:text="功能1"
            android:gravity="center"
            android:textSize="35sp"
            android:background="@drawable/home_input_box"
            android:layout_marginBottom="20dp"/>
        <TextView
            android:id="@+id/function2"
            android:layout_width="480dp"
            android:layout_height="100dp"
            android:text="功能2"
            android:gravity="center"
            android:textSize="35sp"
            android:background="@drawable/home_input_box"
            android:layout_marginBottom="20dp"/>
        <TextView
            android:id="@+id/function3"
            android:layout_width="480dp"
            android:layout_height="100dp"
            android:text="功能3"
            android:gravity="center"
            android:textSize="35sp"
            android:background="@drawable/home_input_box"
            android:layout_marginBottom="20dp"/>
        <TextView
            android:id="@+id/function4"
            android:layout_width="480dp"
            android:layout_height="100dp"
            android:text="功能4"
            android:gravity="center"
            android:textSize="35sp"
            android:background="@drawable/home_input_box" />
    </LinearLayout>
</LinearLayout>